---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/Navbar.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Commission Request</title>
</head>
<Layout>
<body class="bg-gray-50 min-h-screen">
  <Navbar />

  <main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Request a Commission</h1>
      <p class="text-gray-600 mb-8">Fill out the form below and I'll get back to you within 1-2 business days.</p>

      <form
        name="commission-request"
        method="POST"
        action="/success"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="space-y-6"
      >
        <!-- Hidden fields for Netlify -->
        <input type="hidden" name="form-name" value="commission-request" />
        <p class="hidden">
          <label>
            Don't fill this out if you're human: <input name="bot-field" />
          </label>
        </p>

        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Name *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          />
        </div>

        <!-- Commission Type -->
        <div>
          <label for="commission-type" class="block text-sm font-medium text-gray-700 mb-2">
            Commission Type *
          </label>
          <select
            id="commission-type"
            name="commission-type"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          >
            <option value="">Select a type...</option>
            <option value="portrait">Portrait</option>
            <option value="character-design">Character Design</option>
            <option value="illustration">Illustration</option>
            <option value="other">Other</option>
          </select>
        </div>

        <!-- Budget -->
        <div>
          <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">
            Budget Range
          </label>
          <select
            id="budget"
            name="budget"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          >
            <option value="">Select a range...</option>
            <option value="under-100">Under $100</option>
            <option value="100-250">$100 - $250</option>
            <option value="250-500">$250 - $500</option>
            <option value="500-plus">$500+</option>
          </select>
        </div>

        <!-- Timeline -->
        <div>
          <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">
            Desired Timeline
          </label>
          <input
            type="text"
            id="timeline"
            name="timeline"
            placeholder="e.g., 2 weeks, flexible, by end of month"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          />
        </div>

        <!-- Description -->
        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
            Project Description *
          </label>
          <textarea
            id="description"
            name="description"
            rows="6"
            required
            placeholder="Please describe your project in detail, including style preferences, references, and any specific requirements..."
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          ></textarea>
        </div>

        <!-- Reference Links -->
        <div>
          <label for="references" class="block text-sm font-medium text-gray-700 mb-2">
            Reference Links
          </label>
          <input
            type="url"
            id="references"
            name="references"
            placeholder="https://..."
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          />
          <p class="mt-1 text-sm text-gray-500">Optional: Link to a mood board, Pinterest, or reference images</p>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button
            type="submit"
            class="w-full bg-gray-900 text-white py-3 px-6 rounded-md font-medium hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
          >
            Submit Request
          </button>
        </div>

        <p class="text-sm text-gray-500 text-center">
          * Required fields
        </p>
      </form>
    </div>
  </main>
</body>
</Layout>
</html>
